CREATE TABLE usuario (
    id_usuario int AUTO_INCREMENT PRIMARY KEY,
    nome_usuario varchar(100) not null,
    email_usuario varchar(255) not null
);

CREATE TABLE tarefa (
    id_tarefa int AUTO_INCREMENT PRIMARY KEY,
    descricao varchar(255) not null,
    nome varchar(255) not null,
    prioridade ENUM('Baixa','MÃ©dia','Alta') not null,
    data_cadastro date not null,
    status ENUM('a fazer','fazendo','pronto') not null DEFAULT 'a fazer',
     fk_id_usuario int,
    foreign key (fk_id_usuario) references usuario(id_usuario)
);

ALTER TABLE usuario
ADD cep varchar(255) NOT null,
ADD rua varchar(255) NOT null,
ADD bairro varchar(255) NOT null,
ADD cidade varchar(255) NOT null,
ADD estado varchar(255) NOT null